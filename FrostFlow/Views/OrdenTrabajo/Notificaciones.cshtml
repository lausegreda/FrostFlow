@{
    ViewData["Title"] = "Notificaciones";
}

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Últimas Notificaciones</h4>
        </div>
        <div class="card-body">
            <!-- Lista de últimas notificaciones -->
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Tarea completada</h5>
                            <p class="mb-1">La tarea "Actualizar base de datos" ha sido completada con éxito.</p>
                        </div>
                        <span class="badge badge-success">Completada</span>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Problema detectado</h5>
                            <p class="mb-1">Se ha detectado un problema con el servidor de correo electrónico.</p>
                        </div>
                        <span class="badge badge-danger">Problema</span>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Tarea retrasada</h5>
                            <p class="mb-1">La tarea "Generar informe mensual" se encuentra retrasada.</p>
                        </div>
                        <span class="badge badge-warning">Retraso</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>

