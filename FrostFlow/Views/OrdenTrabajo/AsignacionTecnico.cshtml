@{
    ViewData["Title"] = "AsignacionTecnico";
} 

<div class="container">
    <h1 class="mt-4 mb-4">Asignación de Técnicos</h1>

    <!-- Lista de Tareas o Proyectos -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="card-title">Tareas o Proyectos</h4>
        </div>
        <div class="card-body">
            <!-- Aquí iría la lista de tareas o proyectos pendientes -->
        </div>
    </div>

    <!-- Formulario de Asignación -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="card-title">Asignar Técnico</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="inputTarea">Tarea o Proyecto</label>
                    <select class="form-control" id="inputTarea">
                        <!-- Opciones de tareas o proyectos -->
                        <option value="1">Tarea 1</option>
                        <option value="2">Tarea 2</option>
                        <option value="3">Proyecto A</option>
                        <option value="4">Proyecto B</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputTecnico">Técnico</label>
                    <select class="form-control" id="inputTecnico">
                        <!-- Opciones de técnicos -->
                        <option value="1">Juan Pérez</option>
                        <option value="2">María García</option>
                        <option value="3">Pedro López</option>
                        <option value="4">Ana Martínez</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputPrioridad">Prioridad</label>
                    <select class="form-control" id="inputPrioridad">
                        <!-- Opciones de prioridad -->
                        <option value="alta">Alta</option>
                        <option value="media">Media</option>
                        <option value="baja">Baja</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputFecha">Fecha Límite</label>
                    <input type="date" class="form-control" id="inputFecha">
                </div>
                <button type="submit" class="btn btn-primary">Asignar Técnico</button>
            </form>
        </div>
    </div>

    <!-- Lista de Asignaciones -->
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Asignaciones Actuales</h4>
        </div>
        <div class="card-body">
            <!-- Aquí iría la lista de asignaciones actuales de técnicos a tareas o proyectos -->
        </div>
    </div>
</div>