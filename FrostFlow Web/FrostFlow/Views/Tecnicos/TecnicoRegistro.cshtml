@model FrostFlow.Entities.Usuario
@{
    ViewData["Title"] = "TecnicoRegistro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-control {
        font-size: 20px;
    }

    .header-left .search_bar .search_icon i {
        font-size: 25px;
        color: #454545;
    }

    .stat-widget-one .stat-text {
        font-size: 20px;
        color: #868e96;
    }

    .header-right .nav-item .nav-link {
        color: #464a53;
        font-size: 28px;
    }

    .stat-widget-one .stat-digit {
        font-size: 25px;
        color: #373757;
    }

    .nav-label {
        font-size: 18px;
    }

    .quixnav .metismenu > li > a {
        font-size: 18px;
        color: #BDBDB9;
    }

    .footer .copyright {
        background-color: ##868e96; /* Color de fondo del pie de página */
        font-size: 20px;
        color: #373757;
        text-align: center;
        padding: 0.9375rem;
        margin-top: auto;
    }
</style>

<div class="d-flex p-2">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="authincation-content">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="auth-form">
                                <h4 class="text-center mb-4">Crear un Técnico</h4>
                                @using (Html.BeginForm("TecnicoRegistro", "Tecnicos", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label><strong>Nombre del técnico</strong></label>
                                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @type = "text",  @required = "true"})
                                    </div>
                                    <div class="form-group">
                                        <label><strong>Correo</strong></label>
                                        @Html.TextBoxFor(m => m.correo, new { @class = "form-control", @type = "email",  @required = "true" })
                                    </div>
                                    <div class="form-group">
                                        <label><strong>Contraseña</strong></label>
                                        @Html.TextBoxFor(m => m.contrasenna, new { @class = "form-control", @type = "password", @required = "true" })
                                    </div>
                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-primary btn-block">Registrar Técnico</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>