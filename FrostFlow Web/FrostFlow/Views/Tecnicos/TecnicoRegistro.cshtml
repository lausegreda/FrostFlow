@model FrostFlow.Entities.Usuario
@{
    ViewData["Title"] = "TecnicoRegistro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex p-2">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="authincation-content">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="auth-form">
                                <h4 class="text-center mb-4">Crear un Técnico</h4>
                                @using (Html.BeginForm("TecnicoRegistro", "Tecnicos", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label><strong>Nombre del técnico</strong></label>
                                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @type = "text",  @required = "true"})
                                    </div>
                                    <div class="form-group">
                                        <label><strong>Correo</strong></label>
                                        @Html.TextBoxFor(m => m.correo, new { @class = "form-control", @type = "email",  @required = "true" })
                                    </div>
                                    <div class="form-group">
                                        <label><strong>Contraseña</strong></label>
                                        @Html.TextBoxFor(m => m.contrasenna, new { @class = "form-control", @type = "password", @required = "true" })
                                    </div>
                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-primary btn-block">Registrar Técnico</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>