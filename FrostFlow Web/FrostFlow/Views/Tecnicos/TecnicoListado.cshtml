@{
    ViewData["Title"] = "TecnicoListado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Listado de Técnicos</h4>
            <a href="@Url.Action("TecnicoRegistro", "Tecnicos")" class="btn btn-primary w-auto">
                <span class="float-right"><i class="ti-plus"></i></span> Añadir nuevo técnico  </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle table-responsive-sm">
                    <thead>
                        <tr>
                            <th scope="col">Nombre del Tecnico</th>
                            <th scope="col">Correo</th>
                            <th scope="col">Número</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tecnico in Model)
                        {
                            <tr>
                                <td>@tecnico.Nombre</td>
                                <td>@tecnico.Email</td>
                                <td>@tecnico.Numero</td>
                                <td>
                                    <span class="badge badge-@(tecnico.Activo ? "success" : "danger")">
                                        @(tecnico.Activo ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <a href="javascript:void()" class="mr-4" data-toggle="tooltip" data-placement="top" title="Editar">
                                            <i class="fa fa-pencil color-muted"></i>
                                        </a>
                                        <a href="javascript:void()" data-toggle="tooltip" data-placement="top" title="Eliminar">
                                            <i class="fa fa-close color-danger"></i>
                                        </a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>  
                </table>
            </div>
        </div>
    </div>
</div>


