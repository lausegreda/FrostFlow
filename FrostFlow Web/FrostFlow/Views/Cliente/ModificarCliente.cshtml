@model FrostFlow.Entities.Cliente
@{
    ViewData["Title"] = "ModificarCliente";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Actualización de información</h2>
        <h4 class="card-title">Información del cliente</h4>

    </div>

    @if (ViewBag.MsjPantalla != null)
    {
        <br>
        <div class="alert alert-warning" role="alert" style="text-align:center">
            @ViewBag.MsjPantalla
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <br>
        <div class="alert alert-success" role="alert" style="text-align:center">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card-body">
        <div class="basic-form">
            @using (Html.BeginForm("ModificarCliente", "Cliente", FormMethod.Post, new { @class = "form - horizontal" }))
            {
                @Html.HiddenFor(m => m.id_cliente)
                @Html.HiddenFor(m => m.identificacion)

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nombre del cliente</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @placeholder = "Nombre del Cliente", @type = "text", @required = "true" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Identificación</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.identificacion, new { @class = "form-control", @placeholder = "Identificacion", @type = "text", @required = "true" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Dirección Física</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.direccion, new { @class = "form-control", @placeholder = "Direccion", @type = "text", @required = "true" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Número de Contacto</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.telefono, new { @class = "form-control", @placeholder = "Telefono", @type = "text", @required = "true" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

