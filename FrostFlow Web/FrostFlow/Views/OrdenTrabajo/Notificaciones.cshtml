@{
    ViewData["Title"] = "Notificaciones";
}

<style>
    .form-control {
        font-size: 20px;
    }

    .header-left .search_bar .search_icon i {
        font-size: 25px;
        color: #454545;
    }

    .stat-widget-one .stat-text {
        font-size: 20px;
        color: #868e96;
    }

    .header-right .nav-item .nav-link {
        color: #464a53;
        font-size: 28px;
    }

    .stat-widget-one .stat-digit {
        font-size: 25px;
        color: #373757;
    }

    .nav-label {
        font-size: 18px;
    }

    .quixnav .metismenu > li > a {
        font-size: 18px;
        color: #BDBDB9;
    }

    .quixnav .metismenu > li.mm-active ul {
        background-color: rgba(88, 115, 254, 0.04);
        font-size: 16px;
    }

    .alert-heading {
        font-size: 18px;
        font-weight: bold;
        color: #454545;
    }

    p {
        line-height: 1.8;
        color: #454545;
    }

    .alert {
        font-size: 18px;
        padding: 20px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
        color: #454545;
    }

    .alert ul {
        margin-bottom: 0;
        padding-left: 1.5rem;
        color: #454545;
    }

    .alert-warning {
        color: #454545;
        background-color: #373757;
        border-color: #373757;
    }
    .alert hr {
        border-top: 1px solid #ffeeba;
    }

    .alert-warning hr {
        border-top-color: #ffdea5;
    }

    hr {
        margin-top: 2rem;
        margin-bottom: 2rem;
        border: 0;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-color: #eaeaea;
        position: relative;
        background: transparent;
        padding: 2.25rem 1.25rem 27px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 0px;
    }

        .card-header h4.card-title {
            font-size: 20px;
            color: #333;
        }

    .list-group-item {
        background-color: rgba(255, 255, 255, 0.15);
        border: 1px solid #eaeaea;
        padding: 24px;
    }

    h5, .h5 {
        font-size: 18px;
    }

    p {
        line-height: 1.8;
        color: #454545;
        font-size: 18px;
    }

    .badge {
        line-height: 2.5;
        padding: 8px 27px;
    }

    .badge-success {
        color: #fff;
        background-color: #7ED321;
        font-size: 15px;
    }

    .badge-danger {
        color: #fff;
        background-color: #FF1616;
        font-size: 15px;
    }

    .badge-warning {
        color: #fff;
        background-color: #FFAA16;
        font-size: 15px;
    }

    .footer .copyright {
        background-color: ##868e96; /* Color de fondo del pie de página */
        font-size: 20px;
        color: #373757;
        text-align: center;
        padding: 0.9375rem;
        margin-top: auto;
    }
</style>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Últimas Notificaciones</h4>
        </div>
        <div class="card-body">
            <!-- Lista de últimas notificaciones -->
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Tarea completada</h5>
                            <p class="mb-1">La tarea "Actualizar base de datos" ha sido completada con éxito.</p>
                        </div>
                        <span class="badge badge-success">Completada</span>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Problema detectado</h5>
                            <p class="mb-1">Se ha detectado un problema con el servidor de correo electrónico.</p>
                        </div>
                        <span class="badge badge-danger">Problema</span>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Tarea retrasada</h5>
                            <p class="mb-1">La tarea "Generar informe mensual" se encuentra retrasada.</p>
                        </div>
                        <span class="badge badge-warning">Retraso</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>

