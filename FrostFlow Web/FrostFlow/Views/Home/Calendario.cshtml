    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-intro-title">Calendario</h4>

                    <div class="">
                        <div id="external-events" class="my-3">
                            <p>Entradas en el calendario de trabajo</p>
                            <div class="external-event" data-class="bg-primary"><i class="fa fa-move"></i>Nueva Cita</div>
                            <div class="external-event" data-class="bg-success">
                                <i class="fa fa-move"></i>Mantenimiento de equipos
                            </div>
                            <div class="external-event" data-class="bg-dark"><i class="fa fa-move"></i>Visita de inspección</div>
                        </div>
                        <!-- checkbox -->
                        <a href="javascript:void()" data-toggle="modal" data-target="#add-category" class="btn btn-primary btn-event w-100">
                            <span class="align-middle"><i class="ti-plus"></i></span> Creación de nuevo servicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card">
                <div class="card-body">
                    <div id="calendar" class="app-fullcalendar"></div>
                </div>
            </div>
        </div>
        <!-- BEGIN MODAL -->
        <div class="modal fade none-border" id="event-modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title"><strong>Nuevo Servicio</strong></h4>
                    </div>
                    <div class="container my-4">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label">Nombre Servicio</label>
                                    <input class="form-control form-white" placeholder="Servicio requerido" type="text" name="event-name">
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label">Escoja el tipo de servicio</label>
                                    <select class="form-control form-white" data-placeholder="Tipo..." name="category-name">
                                        <option value="primary">Nueva Cita</option>
                                        <option value="success">Mantenimiento de equipos</option>
                                        <option value="dark">Visita de inspección</option>
                                    </select>
                                </div>
                        </form>
                        <div class="col-md-6">
                            <label class="control-label">Técnico asignado</label>
                            <select class="form-control form-white" data-placeholder="Técnico..." name="service-tech">
                                <option value="tech1">Pablo Rodriguez</option>
                                <option value="tech2">Laura Maria</option>
                                <option value="tech3">Julian Jovares</option>
                                <option value="tech4">Carlos Charlie</option>
                                <option value="tech5">Pamela Cristina</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Hora del servicio</label>
                            <input class="form-control form-white" placeholder="Hora" type="text" name="service-hour">
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Cliente asociado</label>
                            <select class="form-control form-white" data-placeholder="Cliente..." name="service-client">
