                                <option value="client2">Garrett Winters</option>
                                <option value="client3">Ashton Cox</option>
                                <option value="client4">Cedric Kelly</option>
                                <option value="client5">Brielle Williamson</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Cotización asociada</label>
                            <select class="form-control form-white" data-placeholder="Cotización..." name="service-cot">
