                                <option value="cot2">2</option>
                                <option value="cot3">3</option>
                                <option value="cot4">4</option>
                                <option value="cot5">5</option>

                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Comentarios adicionales</label>
                            <input class="form-control form-white" placeholder="Comentarios" type="text" name="service-comments">
