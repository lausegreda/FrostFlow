                                            <option value="pink">Mantenimiento</option>
                                            <option value="primary">Primera visita</option>
                                            <option value="warning">Inspecciones</option>
                                        </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-danger waves-effect waves-light save-category" data-dismiss="modal">Salvar</button>
                </div>
            </div>
        </div>
    </div>
