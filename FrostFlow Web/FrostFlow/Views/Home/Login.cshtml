@model FrostFlow.Entities.Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 2.5;
        background-color: #f7f7f7; /* Color de fondo de la página */
        margin: 0;
        padding: 0;
        height: 100vh;
    }

    .form-group {
        margin-bottom: 2rem;
    }

    .form-control {
        display: block;
        width: 100%;
        height: calc(1.5em + 0.75rem + 0px);
        padding: 1.375rem 0.75rem;
        font-size: 0.875rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #eaeaea;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .auth-form {
        padding: 55px 30px;
        position: relative; /* Importante para posicionar correctamente el pseudo-elemento */
        z-index: 1; /* Asegura que esté sobre el pseudo-elemento */
    }

        .auth-form h4 {
            font-size: 30px;
            font-weight: bold;
            color: #333;
        }

        .auth-form label {
            font-size: 18px;
            font-weight: bold;
            color: #555;
        }

        .auth-form .btn {
            height: 50px;
            width: 80%;
            font-weight: 700;
        }

    .btn-container {
        display: flex;
        justify-content: center;
    }

    .auth-form .form-control {
        font-size: 16px;
        font-family: 'Verdana', sans-serif;
    }

    .auth-form .btn-primary {
        background-color: #343957;
        border-color: #343957;
        font-size: 20px;
    }

        .auth-form .btn-primary:hover {
            background-color: #343957;
            border-color: #343957;
        }

    .auth-form .text-primary {
        color: #343957;
    }

        .auth-form .text-primary:hover {
            color: #343957;
        }

    .auth-form .alert {
        font-size: 14px;
    }

    .mt-3,
    .my-3 {
        margin-top: 2rem !important;
    }

    .login-container {
        display: flex;
        height: 100vh;
    }

    .login-form {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .login-card {
        width: 100%;
        max-width: 520px; /* Ancho máximo del formulario */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: #fff;
        z-index: 1; /* Asegura que esté sobre el fondo difuminado */
    }

    .login-image-container {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #343957; /* Color de fondo del lado derecho */
        position: relative;
        overflow: hidden;
    }

        .login-image-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(52, 57, 87, 0.7); /* Color de fondo difuminado */
            backdrop-filter: blur(10px); /* Filtro de desenfoque */
            z-index: 0; /* Detrás del contenido principal */
        }

    .login-image {
        width: 80%;
        max-width: 400px;
        z-index: 1; /* Asegura que esté sobre el fondo difuminado */
    }

    .authincation-content {
        background: #fff;
        border-radius: 5px;
        padding: 2rem;
    }
</style>

<div class="login-container">
    <div class="login-form">
        <div class="login-card">
            <div class="authincation-content">
                <div class="auth-form">
                    <h4 class="text-center mb-4">Iniciar Sesión</h4>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label><strong>Correo</strong></label>
                            @Html.TextBoxFor(m => m.correo, new { @class = "form-control", @type = "email", @required = "true" })
                        </div>
                        <div class="form-group">
                            <label><strong>Contraseña</strong></label>
                            @Html.TextBoxFor(m => m.contrasenna, new { @class = "form-control", @type = "password", @required = "true" })
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </div>

                        @if (ViewBag.MsjPantalla != null)
                        {
                            <div style="margin-top:10px">
                                <div style="text-align:left; color:red">
                                    @ViewBag.MsjPantalla
                                </div>
                            </div>
                        }
                    }
                    <div class="new-account mt-3">
                        <p><a href="@Url.Action("ForgotPassword", "Home")" class="text-primary">¿Olvidó la contraseña?</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-image-container">
        <img src="~/images/logos/logo blanco@4x.png" class="login-image">
    </div>
</div>
