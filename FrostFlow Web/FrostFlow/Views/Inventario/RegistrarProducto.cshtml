@{
    ViewData["Title"] = "RegistrarProducto";
}

<style>
    .form-control {
        font-size: 20px;
    }

    .header-left .search_bar .search_icon i {
        font-size: 25px;
        color: #454545;
    }

    .stat-widget-one .stat-text {
        font-size: 20px;
        color: #868e96;
    }

    .header-right .nav-item .nav-link {
        color: #464a53;
        font-size: 28px;
    }

    .stat-widget-one .stat-digit {
        font-size: 25px;
        color: #373757;
    }

    .nav-label {
        font-size: 18px;
    }

    .quixnav .metismenu > li > a {
        font-size: 18px;
        color: #BDBDB9;
    }

    .quixnav .metismenu > li.mm-active ul {
        background-color: rgba(88, 115, 254, 0.04);
        font-size: 16px;
    }

    .footer .copyright {
        background-color: ##868e96; /* Color de fondo del pie de página */
        font-size: 20px;
        color: #373757;
        text-align: center;
        padding: 0.9375rem;
        margin-top: auto;
    }

    label {
        display: inline-block;
        margin-bottom: 0.5rem;
        font-size: 18px;
        color: #454545;
    }

    .card-header h2.card-title {
        font-size: 24px;
        color: #333;
    }

    .card-header h4.card-title {
        font-size: 20px;
        color: #333;
    }

    .card-body {
        background-color: #f8f9fa;
        padding: 20px;
    }

    .card-header {
        border-color: #eaeaea;
        position: relative;
        background: transparent;
        padding: 2.25rem 1.25rem 27px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 0px;
    }

    .form-group.row {
        margin-bottom: 15px;
    }

        .form-group.row label {
            font-size: 18px;
            color: #333;
        }

        .form-group.row .col-sm-10 {
            padding-left: 0;
        }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        color: #fff;
        background-color: #593bdb;
        border-color: #593bdb;
        padding: 14px 30px;
        font-size: 18px;
    }

    .col-form-label {
        padding-top: calc(0.375rem + 1px);
        padding-bottom: calc(0.375rem + 1px);
        margin-bottom: 0;
        font-size: 18px;
        line-height: 1.5;
    }

    .col-sm-2 {
        flex: 0 0 16.66667%;
        max-width: 16.66667%;
        font-size: 18px;
    }
</style>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Registrar Producto</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputNombreProducto">Nombre del Producto</label>
                        <input type="text" class="form-control" id="inputNombreProducto" placeholder="Nombre del producto">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCategoria">Categoría</label>
                        <input type="text" class="form-control" id="inputCategoria" placeholder="Categoría del producto">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPrecio">Precio</label>
                        <input type="number" class="form-control" id="inputPrecio" placeholder="Precio del producto">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCantidad">Cantidad</label>
                        <input type="number" class="form-control" id="inputCantidad" placeholder="Cantidad en inventario">
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary">Registrar Producto</button>
        </div>
    </div>